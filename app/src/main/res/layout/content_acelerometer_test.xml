<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RoverControlActivity"
    tools:showIn="@layout/activity_acelerometer_test">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="X"
        android:id="@+id/txt_axis_x"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/txt_axis_x_value"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_axis_x"
        android:layout_toEndOf="@+id/txt_axis_x"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Y"
        android:id="@+id/txt_axis_y"
        android:layout_toRightOf="@+id/txt_axis_x_value"
        android:layout_toEndOf="@+id/txt_axis_x_value"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/txt_axis_y_value"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_axis_y"
        android:layout_toEndOf="@+id/txt_axis_y"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Z"
        android:id="@+id/txt_axis_z"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txt_axis_y_value"
        android:layout_toEndOf="@+id/txt_axis_y_value"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0"
        android:id="@+id/txt_axis_z_value"
        android:layout_toRightOf="@+id/txt_axis_z"
        android:layout_toEndOf="@+id/txt_axis_z"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <View
        android:layout_width="20dp"
        android:id="@+id/throttle_line"
        android:layout_height="10dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="46dp"
        android:layout_below="@+id/txt_axis_x"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Throttle: 0"
        android:id="@+id/throttle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/throttle_line"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />

</RelativeLayout>
